<Window x:Class="NoteApplication.AcceptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteApplication"
        mc:Ignorable="d"
        Title="" Height="168" Width="234">

    <Grid HorizontalAlignment="Center" Width="214" Margin="0,0,0,-6" >
        <Grid.RowDefinitions>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="98*"/>
        </Grid.RowDefinitions>
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>

        <Button Content="Да" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="62" Height="30" Click="Button_Click_1" Grid.Row="1"/>
        <Button Content="Нет" HorizontalAlignment="Left" Margin="142,10,0,0" VerticalAlignment="Top" Width="62" Height="30" Grid.Row="1"/>
        <Label Content="Принять?" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontFamily="Times New Roman"/>

    </Grid>
</Window>
